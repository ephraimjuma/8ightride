                      <script>
                        document.addEventListener('DOMContentLoaded', async function() {
                          async function fetchData() {
                            try {
                              const response = await fetch('/api/getCounts');
                              if (!response.ok) {
                                throw new Error('Network response was not ok');
                              }
                              const data = await response.json();
                              console.log('Fetched data:', data); // Log the fetched data to console
                    
                              return {
                                labels: ['Drivers', 'Rides'],
                                datasets: [{
                                  label: 'Count',
                                  data: [data.drivers, data.rides],
                                  backgroundColor: ['#3498DB', '#2ECC71'], // Blue for drivers, green for rides
                                }]
                              };
                            } catch (error) {
                              console.error('Error fetching data:', error);
                              return {
                                labels: ['Drivers', 'Rides'],
                                datasets: [{
                                  label: 'Count',
                                  data: [0, 0], // Fallback data
                                  backgroundColor: ['#3498DB', '#2ECC71'],
                                }]
                              };
                            }
                          }
                    
                          function handleHover(evt, item, legend) {
                            legend.chart.data.datasets[0].backgroundColor.forEach((color, index, colors) => {
                              colors[index] = index === item.index || color.length === 9 ? color : color + '4D';
                            });
                            legend.chart.update();
                          }
                    
                          function handleLeave(evt, item, legend) {
                            legend.chart.data.datasets[0].backgroundColor.forEach((color, index, colors) => {
                              colors[index] = color.length === 9 ? color.slice(0, -2) : color;
                            });
                            legend.chart.update();
                          }
                    
                          async function renderChart() {
                            const chartData = await fetchData();
                            console.log('Chart Data:', chartData); // Log chart data to console
                            const config = {
                              type: 'pie',
                              data: chartData,
                              options: {
                                plugins: {
                                  legend: {
                                    onHover: handleHover,
                                    onLeave: handleLeave
                                  }
                                }
                              }
                            };
                    
                            const ctx = document.getElementById('driverRidePieChart').getContext('2d');
                            new Chart(ctx, config);
                          }
                    
                          renderChart();
                        });
                      </script>

