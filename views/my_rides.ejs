<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="/assets/img/favicon.ico">
    <title>My Rides</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">
</head>

<body>

    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a href="/home" class="logo">
                    <img src="/assets/img/logo.png" width="35" height="35" alt=""> <span>Uniride</span>
                </a>
            </div>
            <a id="toggle_btn" href="javascript:void(0);"><i class="fa fa-bars"></i></a>
            <a id="mobile_btn" class="mobile_btn float-left" href="#sidebar"><i class="fa fa-bars"></i></a>
            <ul class="nav user-menu float-right">
                <li class="nav-item dropdown has-arrow">
                    <a href="#" class="dropdown-toggle nav-link user-link" data-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" src="/assets/img/user.jpg" width="24" alt="User">
                            <span class="status online"></span>
                        </span>
                        <span>User</span>
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/user_profile">My Profile</a>
                        <a class="dropdown-item" href="/user/edit_profile">Edit Profile</a>
                        <a class="dropdown-item" href="/user">Home Page</a>
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </div>
                </li>
            </ul>
            <div class="dropdown mobile-user-menu float-right">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="/user_profile">My Profile</a>
                    <a class="dropdown-item" href="/user/edit_profile">Edit Profile</a>
                    <a class="dropdown-item" href="/user">Home Page</a>
                    <a class="dropdown-item" href="/logout">Logout</a>
                </div>
            </div>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">Main</li>
                        <li class="active">
                            <a href="/user"><i class="fa fa-dashboard"></i> <span>Home Page</span></a>
                        </li>
                        <li>
                            <a href="/user/my_rides"><i class="fa fa-calendar"></i> <span>Ride</span></a>
                        </li>
                        <li>
                            <a href="/user_profile"><i class="fa fa-user"></i> <span>My Profile</span></a>
                        </li>
                        <li>
                            <a href="/user/edit_profile"><i class="fa fa-edit"></i> <span>Edit Profile</span></a>
                        </li>
                        <li>
                            <a href="/add_driver"><i class="fa fa-edit"></i> <span>Become a Driver</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-7 col-6">
                        <h4 class="page-title">My Rides</h4>
                    </div>
                </div>
                <div class="card-box">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Service</th>
                                    <th>Pickup Location</th>
                                    <th>Dropoff Location</th>
                                    <th>Pickup Time</th>
                                    <th>Dropoff Time</th>
                                    <th>Days of the Week</th>
                                    <th>Note</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% bookings.forEach(function(booking) { %>
                                <tr>
                                    <td><%= booking.name %></td>
                                    <td><%= booking.email %></td>
                                    <td><%= booking.phone %></td>
                                    <td><%= booking.service %></td>
                                    <td><%= booking.pickupLocation %></td>
                                    <td><%= booking.dropoffLocation %></td>
                                    <td><%= booking.pickupTime %></td>
                                    <td><%= booking.dropoffTime %></td>
                                    <td><%= Array.isArray(booking.daysOfWeek) ? booking.daysOfWeek.join(', ') : booking.daysOfWeek %></td>
                                    <td><%= booking.note %></td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="sidebar-overlay" data-reff=""></div>
    <script src="/assets/js/jquery-3.2.1.min.js"></script>
    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/jquery.slimscroll.js"></script>
    <script src="/assets/js/app.js"></script>
</body>

</html>
